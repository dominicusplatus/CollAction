@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    // Reset password confirmation
    ViewData["Title"] = "Bevestiging nieuw wachtwoord";
}

<div id="reset-password-confirmation-starting">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                @*Reset password confirmation*@
                <h1>Bevestiging nieuw wachtwoord</h1>

                @*(Your password has been reset)*@
                <h4>(Je wachtwoord is opnieuw ingesteld)</h4>
            </div>
        </div>
    </div>
</div>

<div id="reset-password-confirmation-content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-6 col-md-offset-3">
                <p>
                    @* Please click here to log in.*@
                    <a asp-controller="Account" asp-action="Login">Klik hier om in te loggen.</a>
                </p>
            </div>
        </div>
    </div>
</div>